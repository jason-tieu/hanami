{
  "name": "hanami",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NEXT_PUBLIC_STORAGE_DRIVER=supabase next dev --turbopack",
    "build": "cross-env NEXT_PUBLIC_STORAGE_DRIVER=supabase next build --turbopack",
    "start": "cross-env NEXT_PUBLIC_STORAGE_DRIVER=supabase next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "postbuild": "next-sitemap",
    "export": "next build && next export",
    "convert-og": "node scripts/convert-og.js",
    "optimg": "node scripts/optimize-images.mjs",
    "pre-commit": "node scripts/pre-commit-check.mjs"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
