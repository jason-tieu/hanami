<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="400" height="300" fill="#0B0B0D"/>
  <rect x="20" y="20" width="360" height="260" rx="12" fill="#1A1A1A" stroke="#333" stroke-width="1"/>
  
  <!-- Ground Control Station UI -->
  <rect x="40" y="40" width="320" height="180" rx="8" fill="#0F0F0F"/>
  
  <!-- Map Area -->
  <rect x="50" y="50" width="200" height="120" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <circle cx="100" cy="80" r="3" fill="#FF4B8A"/>
  <circle cx="150" cy="100" r="3" fill="#FF4B8A"/>
  <circle cx="120" cy="130" r="3" fill="#FF4B8A"/>
  <path d="M100 80 L150 100 L120 130" stroke="#FF4B8A" stroke-width="1" fill="none"/>
  
  <!-- Telemetry Panel -->
  <rect x="270" y="50" width="100" height="120" rx="4" fill="#1A1A1A" stroke="#333" stroke-width="1"/>
  <text x="280" y="70" fill="#FF4B8A" font-family="monospace" font-size="10">ALT: 120m</text>
  <text x="280" y="85" fill="#FF4B8A" font-family="monospace" font-size="10">SPD: 45km/h</text>
  <text x="280" y="100" fill="#FF4B8A" font-family="monospace" font-size="10">BAT: 78%</text>
  
  <!-- Control Buttons -->
  <rect x="50" y="190" width="60" height="20" rx="4" fill="#FF4B8A" opacity="0.2"/>
  <text x="70" y="202" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">ARM</text>
  
  <rect x="120" y="190" width="60" height="20" rx="4" fill="#333"/>
  <text x="140" y="202" fill="#999" font-family="monospace" font-size="8" text-anchor="middle">TAKEOFF</text>
  
  <!-- Title -->
  <text x="200" y="250" fill="#FF4B8A" font-family="sans-serif" font-size="16" font-weight="bold" text-anchor="middle">UAV Ground Control Station</text>
  <text x="200" y="270" fill="#999" font-family="sans-serif" font-size="12" text-anchor="middle">Flask • Socket.IO • GIS</text>
</svg>
