<svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="400" height="300" fill="#0B0B0D"/>
  <rect x="20" y="20" width="360" height="260" rx="12" fill="#1A1A1A" stroke="#333" stroke-width="1"/>
  
  <!-- AWS Cloud Architecture -->
  <rect x="40" y="40" width="320" height="180" rx="8" fill="#0F0F0F"/>
  
  <!-- Frontend -->
  <rect x="60" y="60" width="80" height="50" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <rect x="70" y="70" width="60" height="30" fill="#2A2A4A"/>
  <circle cx="85" cy="80" r="3" fill="#4A90E2"/>
  <circle cx="105" cy="85" r="3" fill="#4A90E2"/>
  <circle cx="95" cy="95" r="3" fill="#4A90E2"/>
  <text x="100" y="125" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">Next.js Frontend</text>
  
  <!-- API Gateway -->
  <rect x="160" y="60" width="80" height="50" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <rect x="170" y="70" width="60" height="30" fill="#2A2A4A"/>
  <rect x="175" y="75" width="50" height="20" fill="#FF4B8A" opacity="0.3"/>
  <text x="200" y="125" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">API Gateway</text>
  
  <!-- ECS Services -->
  <rect x="260" y="60" width="80" height="50" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <rect x="270" y="70" width="60" height="30" fill="#2A2A4A"/>
  <rect x="275" y="75" width="25" height="20" fill="#00D4AA" opacity="0.3"/>
  <rect x="305" y="75" width="25" height="20" fill="#00D4AA" opacity="0.3"/>
  <text x="300" y="125" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">ECS Workers</text>
  
  <!-- S3 Storage -->
  <rect x="60" y="130" width="80" height="50" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <rect x="70" y="140" width="60" height="30" fill="#2A2A4A"/>
  <rect x="75" y="145" width="50" height="20" fill="#FF9500" opacity="0.3"/>
  <text x="100" y="195" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">S3 Storage</text>
  
  <!-- Redis Cache -->
  <rect x="160" y="130" width="80" height="50" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <rect x="170" y="140" width="60" height="30" fill="#2A2A4A"/>
  <circle cx="200" cy="155" r="8" fill="#DC382D" opacity="0.3"/>
  <text x="200" y="195" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">Redis Cache</text>
  
  <!-- CloudWatch -->
  <rect x="260" y="130" width="80" height="50" rx="4" fill="#1A1A2E" stroke="#255, 75, 138" stroke-width="1"/>
  <rect x="270" y="140" width="60" height="30" fill="#2A2A4A"/>
  <rect x="275" y="145" width="50" height="20" fill="#FF4B8A" opacity="0.2"/>
  <text x="300" y="195" fill="#FF4B8A" font-family="monospace" font-size="8" text-anchor="middle">CloudWatch</text>
  
  <!-- Connection Lines -->
  <path d="M140 85 L160 85" stroke="#FF4B8A" stroke-width="1" stroke-dasharray="2,2"/>
  <path d="M240 85 L260 85" stroke="#FF4B8A" stroke-width="1" stroke-dasharray="2,2"/>
  <path d="M100 110 L100 130" stroke="#FF4B8A" stroke-width="1" stroke-dasharray="2,2"/>
  <path d="M200 110 L200 130" stroke="#FF4B8A" stroke-width="1" stroke-dasharray="2,2"/>
  <path d="M300 110 L300 130" stroke="#FF4B8A" stroke-width="1" stroke-dasharray="2,2"/>
  
  <!-- Title -->
  <text x="200" y="250" fill="#FF4B8A" font-family="sans-serif" font-size="16" font-weight="bold" text-anchor="middle">Video Microservices</text>
  <text x="200" y="270" fill="#999" font-family="sans-serif" font-size="12" text-anchor="middle">AWS ECS • S3 • Redis • CloudWatch</text>
</svg>
